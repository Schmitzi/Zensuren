<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
	android:layout_height="48dp" android:background="@drawable/divider"
	android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_margin="8dp"
		android:text="@string/begins_semester" android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#0000FF" android:textStyle="bold"/>
	<EditText android:id="@+id/edtSem" android:layout_width="48dp"
		android:layout_height="40dp" android:layout_marginBottom="4dp"
		android:layout_marginTop="4dp" android:ems="10" android:inputType="number">
		<requestFocus />
	</EditText>
	<View android:layout_height="0dp" android:layout_width="0dp"
		android:layout_weight="1" />

	<ImageView android:src="@drawable/delete"
		android:contentDescription="@string/delete" android:layout_height="32dp"
		android:layout_margin="8dp" android:layout_width="32dp" android:id="@+id/imgDelete" />
</LinearLayout>